%h3 Submission Reporting

- if @question_responses
  = render partial:  'report'

  .row
    .col-md-6
      .col-md-2
        Title:
      .col-md-10
        = grid_filter @question_responses, :title_filter

  .row
    .col-md-6
      .col-md-2
        Org name:
      .col-md-10
        = grid_filter @question_responses, :org_filter

  %br
  .row
    .col-md-6
      .external-buttons
        %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
        %button.btn.wg-external-reset-button{'data-grid-name' => 'grid'} Reset
        %button.btn.btn-primary.wg-external-csv-export-button{'data-grid-name' => 'grid'} Export To CSV

  %br
  %br
  %br

  .row
    .col-md-12
      = render_grid(@question_responses)
- else
  insufficient responses
