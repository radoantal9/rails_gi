%h3 User Responses (non private/anonymous questions)

- if current_user.is? :admin
  = link_to 'Clean admin result', '/question_responses/clean_admin_result', :method => :post, :data => { :confirm => 'Are you sure?' }, :class=>"btn btn-info pull-right"

- if @question_responses
  = render partial:  'grid'
  .row
    .col-md-8.form-group
      .col-md-2
        Title:
      .col-md-6
        = grid_filter @question_responses, :title_filter
  .row
    .col-md-8.form-group
      .col-md-2
        Org name:
      .col-md-6
        = grid_filter @question_responses, :org_filter

  .row
    .col-md-8.form-group
      .col-md-2
        User id:
      .col-md-6
        = grid_filter @question_responses, :user_id_filter
  .row
    .col-md-8.form-group
      .col-md-2
        Question ID:
      .col-md-6
        = grid_filter @question_responses, :question_id_filter
  .row-fluid
    .col-md-12.form-group
      .external-buttons
        %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
        %button.btn.wg-external-reset-button{'data-grid-name' => 'grid'} Reset
        %button.btn.btn-primary.wg-external-csv-export-button{'data-grid-name' => 'grid'} Export To CSV
  %br
  %br
  %br
  .row
    .col-md-12
      = render_grid(@question_responses)
- else
  insufficient responses