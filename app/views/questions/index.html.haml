%h3 Questions

= link_to 'New Question', new_question_path, :class=>"btn btn-primary pull-right"


= render partial: 'index_grid'

.row
  .col-md-8
    .col-md-2
      Title:
    .col-md-4
      = grid_filter @questions, :title_filter
%br
.row
  .col-md-8
    .col-md-2
      Question type:
    .col-md-4
      = grid_filter @questions, :type_filter
%br
.row
  .col-md-8
    .col-md-2
      Retired:
    .col-md-4
      = grid_filter @questions, :retired_filter

%br
.row
  .col-md-8
    .col-md-2
      Updated:
    .col-md-4
      = grid_filter @questions, :updated_at_filter

%br
.row
  .col-md-8
    .external-buttons
      %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
      %button.btn.wg-external-reset-button{'data-grid-name' => 'grid'} Reset
%br

.row
  .col-md-12
    = render_grid(@questions)

