- cache("devise_general_registration_page") do
  %h2 Create Admin Account

  You must have a signup key to register as an org administrator.  Please contact us to have one setup for you.
  %p

  = form_for(resource, :as => resource_name, :url => "/register", html: { class: 'form-small' }) do |f|
    = devise_error_messages!
    %div.form-group
      = f.email_field :email, :autofocus => true, :placeholder => "Email address", :class => "form-control"
    %div.form-group
      = f.password_field :password, :placeholder => "Password", :class => "form-control"
    %div.form-group
      = f.password_field :password_confirmation, :placeholder => "Re-type your password", :class => "form-control"

    %div.form-group
      = f.label :signup_key 
      = f.text_field :signup_key, :placeholder => "Required for assign with org", :class => "form-control"

    %div
      = f.submit "Sign up", :class => 'btn btn-primary btn-large'
